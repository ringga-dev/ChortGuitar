<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_bottom_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_nameK"
            android:textColor="@color/black"
            android:fontFamily="@font/alegreya_bold_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Expert in Photoshop, Adobe XD"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/pb_prog"
            android:scrollbarSize="@dimen/padding_8"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>